/* footnotes are not italic, not small, not between narrow margin & are nicely spaced out */
div.footnotes{margin-right:0%; margin-top:2ex; font-style:normal; font-size:100%}
div.footnotes p{margin-top:1em;}
/* things that appear in italics are not  all larger (I haven't changed them all ---
you want the smaller italics in footnotes, e.g.*/
.cmmi-10{font-style: italic;}
.cmti-12{font-size:inherit; font-style: italic;}
.cmmi-12{font-size:inherit;font-style: italic;}
.cmmi-8{font-size:80%;font-style: italic;}
.cmti-10{ font-style: italic;}
/* text that is supposed to be 109% is normal sized */
.cmr-10x-x-109{font-size:inherit}
.cmbx-10x-x-109{font-size:inherit;}
/* author and date are normal sized */
div.author span.cmr-12x-x-120{font-size:inherit;}
div.date span.cmr-12x-x-120{font-size:inherit;}
/*extra space before section headings & bibliography */
.sectionHead{margin-top:1em;}
.likesectionHead{margin-top:1em;}
/*extra line spacing for title */
.titleHead{line-height:1.1em;}
/* quotes are not justified (like everything else) */
.quote{text-align:left;}
/* quote margins are increased so that they are further in than indented lines*/
.quote{margin-left:2em;margin-right:2em;}
